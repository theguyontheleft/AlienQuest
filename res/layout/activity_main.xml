<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_activity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/instructionsButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startGameButton"
        android:layout_below="@+id/startGameButton"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_background"
        android:text="Instructions"
        android:textColor="@color/LimeGreen" />

    <Button
        android:id="@+id/aboutButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructionsButton"
        android:layout_alignRight="@+id/startGameButton"
        android:layout_below="@+id/instructionsButton"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_background"
        android:text="About"
        android:textColor="@color/LimeGreen" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="@string/hello_human" 
        android:textColor="@color/Gray" />

    <Button
        android:id="@+id/startGameButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/button_background"
        android:text="Start Game"
        android:textColor="@color/LimeGreen" />

    <FrameLayout
        android:id="@+id/mainActivityFragmentFrame1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="?android:attr/detailsElementBackground"
        android:visibility="visible" >
    </FrameLayout>

</RelativeLayout>